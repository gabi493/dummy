{% extends '::base.html.twig' %}

{% block body %}
    <form class="genericForm" action="{{ path('signupDo') }}" method="post">
        <div>
            <label for="mail">Mail:</label>
            <input type="text" id="mail" name="mail"/>
        </div>
        <div>
            <label for="username">Username:</label>
            <input type="text" id="username" name="username"/>
        </div>
        <div>
            <label for="password">Password:</label>
            <input type="password" id="password" name="password" />
        </div>

        <div>
            <label for="rols">Rol:</label>
            <select id="rols" name="rols">
                {% for rol in rols %}
                    <option value="{{ rol.id }}">{{ rol.tipo }}</option>
                {% endfor %}
            </select>
        </div>

        <div>
            <label for="enterprises">Enterprise:</label>
            <select id="enterprises" name="enterprises">
                {% for enterprise in enterprises %}
                    <option value="{{ enterprise.id }}">{{ enterprise.name }}</option>
                {% endfor %}
            </select>
        </div>
        <div class="button">
            <button type="submit" id="submit">Sign up</button>
        </div>
        {% if error is defined and error.code > 0 %}
            {# codigo html con el aspecto del error > #}
            <div class="message">
                <message id="message">{{ error.message }}</message>
            </div>
        {% endif %}
    </form>
{% endblock %}